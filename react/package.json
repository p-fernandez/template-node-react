{
  "name": "template-node",
  "version": "1.0.0",
  "description": "Quick template for React.js bundled with Webpack.",
  "main": "index.js",
  "author": "Pablo Fern√°ndez <pablo.fernandez.otero@gmail.com>",
  "license": "MIT",
  "private": true,
  "engineStrict": true,
  "engines": {
    "node": ">14.0.0"
  },
  "scripts": {
    "build": "webpack --config ./build-config/webpack.prod.js",
    "frontend:dev": "webpack serve --mode development --config ./build-config/webpack.dev.js",
    "frontend:prod": "./node_modules/http-server/bin/http-server -p 8000 -a localhost ./dist/",
    "test": "jest test"
  },
  "dependencies": {
    "@webpack-cli/serve": "1.3.0",
    "http-server": "0.12.3",
    "nconf": "0.11.2",
    "path": "0.12.7",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "5.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.13.1",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-react-jsx": "7.12.17",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.13.5",
    "@babel/preset-react": "7.12.13",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "clean-webpack-plugin": "3.0.0",
    "eslint": "7.20.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.2.0",
    "jest": "26.6.3",
    "mini-css-extract-plugin": "1.3.8",
    "react-test-renderer": "17.0.1",
    "script-ext-html-webpack-plugin": "2.1.5",
    "webpack": "5.24.2",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-manifest-plugin": "3.0.0",
    "webpack-merge": "5.7.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "bower_components",
      "shared"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(js|jsx)$",
    "moduleNameMapper": {
      "^components/(.*)$": "<rootDir>/src/components/$1",
      "^containers/(.*)$": "<rootDir>/src/containers/$1"
    }
  }
}
